{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Finsight",
  "version": "0.1.1",
  "identifier": "top.eldolfin.wsb-app",
  "build": {
    "frontendDist": "../frontend/build",
    "devUrl": "http://localhost:8085",
    "beforeDevCommand": "cd .. && just --set VITE_API_BASE_EXTERNAL / dev-docker",
    "beforeBuildCommand": "just build-static-ext"
  },
  "app": {
    "windows": [
      {
        "title": "Finsight",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
