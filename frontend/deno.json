{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es6"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/generated/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["src/generated/"],
    "indentWidth": 2,
    "semiColons": true
  },
  "tasks": {
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "format": "deno fmt"
  },
  "importMap": "./import_map.json"
}